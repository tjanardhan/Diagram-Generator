direction: right

Library: {
  shape: cylinder
  label: "Library"
}

Members: {
  shape: person
  label: "Members"
  attributes: [
    "member_id (PK)"
    "name"
    "address"
    "phone"
    "email"
  ]
}

Books: {
  shape: sql_table
  label: "Books"
  attributes: [
    "isbn (PK)"
    "title"
    "author"
    "genre"
    "publication_year"
    "available_copies"
  ]
}

Loans: {
  shape: diamond
  label: "Loans"
  attributes: [
    "loan_id (PK)"
    "member_id (FK)"
    "isbn (FK)"
    "loan_date"
    "due_date"
    "return_date"
  ]
}

Library -> Members
Library -> Books
Members -> Loans
Books -> Loans